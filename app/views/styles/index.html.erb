<div class="page-header">
  <h1>
    Styles
    <a href="/styles/new" class="btn btn-lg btn-success">New Style</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>

      <% @styles.each do |style| %>
      <tr>
        <td><%= style.title %></td>
        <td><%= style.description %></td>
        <td>
          <a href="/styles/<%= style.id %>" class="btn btn-primary">Show</a>
          <a href="/styles/<%= style.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_style/<%= style.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
