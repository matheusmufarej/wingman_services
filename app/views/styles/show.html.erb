<div class="page-header">
  <h3>Style #<%= @style.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @style.title %></dd>

      <dt>Description</dt>
      <dd><%= @style.description %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/styles" class="btn btn-primary">
        Back
      </a>
      <a href="/styles/<%= @style.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_style/<%= @style.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
