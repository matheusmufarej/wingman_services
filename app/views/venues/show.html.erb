<div class="page-header">
  <h3>Venue #<%= @venue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Style</dt>
      <dd>
        <% if @venue.style.present? %>
          <a href="/styles/<%= @venue.style_id %>">
            <%= @venue.style.title %>
          </a>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= @venue.name %></dd>

      <dt>Address</dt>
      <dd>
        <div>
          <div id="location_map" style="height: 480px;"></div>
        </div>
      </dd>

      <dt>Description</dt>
      <dd><%= @venue.description %></dd>

      <dt>Website</dt>
      <dd><%= @venue.website %></dd>
      
      <dt>Created by</dt>
      <dd><%= User.find(@venue.user_id).username %></dd>

      <!--<dt>Photo</dt>
      <dd><img src="<#%= @venue.photo %>" class="img-responsive"></dd>-->

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/venues" class="btn btn-primary">
        Back
      </a>
      <% if @venue.user_id == current_user.id %>
      <a href="/venues/<%= @venue.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_venue/<%= @venue.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
      <% end %>
    </div>
  </div>
</div>

<!-- A Venue has many approaches -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Approaches
      </li>

      <% @venue.approaches.each do |approach| %>
        <li class="list-group-item">
          <a href="/approaches/<%= approach.id %>">
            <%= approach.created_at %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/approaches/<%= approach.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/approaches/<%= approach.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_approach/<%= approach.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

    </ul>
  </div>
</div>

<!-- A Venue has many openers -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Openers
      </li>

      <% @venue.openers.each do |opener| %>
        <li class="list-group-item">
          <a href="/openers/<%= opener.id %>">
            <%= opener.title %> / <%= opener.created_at %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/openers/<%= opener.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/openers/<%= opener.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_opener/<%= opener.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @venue.address_latitude %>,
        "lng": <%= @venue.address_longitude %>,
        "infowindow": "<h5><%= @venue.created_at %></h5><small><%= @venue.address_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>