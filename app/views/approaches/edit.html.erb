<!-- Validation failure messages -->
<% if @approach.errors.any? %>
  <% @approach.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Approach #<%= @approach.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_approach/<%= @approach.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @approach.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for venue_id -->
      <div class="form-group">
        <label for="venue_id" class="control-label">
          Venue
        </label>

        <%= select_tag(:venue_id, options_from_collection_for_select(Venue.all, :id, :style_id, @approach.venue_id), :class => "form-control") %>
      </div>

      <!-- Label and input for opener_id -->
      <div class="form-group">
        <label for="opener_id" class="control-label">
          Opener
        </label>

        <%= select_tag(:opener_id, options_from_collection_for_select(Opener.all, :id, :styles_id, @approach.opener_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Approach
      </button>
      or
      <a href="/approaches/<%= @approach.id %>">Cancel</a>
    </form>
  </div>
</div>
