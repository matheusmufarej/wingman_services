<div class="page-header">
  <h3>Approach #<%= @approach.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @approach.user.present? %>
          <a href="/users/<%= @approach.user_id %>">
            <%= @approach.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Venue</dt>
      <dd>
        <% if @approach.venue.present? %>
          <a href="/venues/<%= @approach.venue_id %>">
            <%= @approach.venue.name %>
          </a>
        <% end %>
      </dd>

      <dt>Opener</dt>
      <dd>
        <% if @approach.opener.present? %>
          <a href="/openers/<%= @approach.opener_id %>">
            <%= @approach.opener.title %>
          </a>
        <% end %>
      </dd>

      <dt>When</dt>
      <dd>
        <% if @approach.opener.present? %>
            <%= @approach.created_at %>
        <% end %>
      </dd>

      <dt>Successful</dt>
      <dd>
        <% if @approach.opener.present? %>
              <% if @approach.successful==true %> Yes!
                <%else%> Nope.
              <%end%>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/approaches" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @approach.user %>
        <a href="/approaches/<%= @approach.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_approach/<%= @approach.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
